{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <div>
        <h1>{{ category.name }}</h1>
        <ul>
            {% for dish in dishes %}
            <li>
                <img src="{{ dish.image }}" alt="{{ dish.name }}"/>
                {{ dish.name }} {{ dish.price }}€ | {{ dish.calories }} cal.
                {% if dish.allergens is not empty %}
                    | Allergènes :
                    {% for allergen in dish.allergens %}
                        {{ allergen.name }},
                    {% endfor %}
                {% endif %}
            </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
